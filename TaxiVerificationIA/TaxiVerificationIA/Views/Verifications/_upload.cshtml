<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Cargar Imagen</h5>
                <button type="button" onclick="CloseModal()" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-8">
                        <img class="img-thumbnail" id="img-thumbnail" style="height:250px;width:250px" src="/img/nophoto.png" />
                    </div>
                    <div class="col-lg-8">
                        <input type="file" id="imageupload" onchange="FunctionUpload()" accept="image/png, image/jpeg, image/jpg" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-secondary" onclick="CloseModal()" data-dismiss="modal">Close</a>
                <input type="hidden" id="currentImage" />
            </div>
        </div>
    </div>
</div>

