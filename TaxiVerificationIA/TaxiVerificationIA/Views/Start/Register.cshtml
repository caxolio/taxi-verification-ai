@model TaxiVerificationIA.Models.User;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        Registrate
                    </div>
                    <div class="card-body">

                        <form asp-controller="Start" asp-action="Register" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="UserName" required />
                            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Email" required />
                            <input class="form-control mb-3" type="password" placeholder="Contrasena" asp-for="Password" required />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            @if (ViewData["Message"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Message"]
                                    </div>
                                </div>
                            }
                            Ya tienes una cuenta? <a href="@Url.Action("SignIn","Start")">Iniciar Sesion!</a>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
